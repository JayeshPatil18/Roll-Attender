<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dilogbox_bg"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp">

                <RelativeLayout
                    android:id="@+id/sendRelativeLayout"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="#00FFFFFF">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/verifier_image_send"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/email_send_blue" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/validRelativeLayout"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="#00FFFFFF">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/verifier_image_valid"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="false"
                        app:lottie_rawRes="@raw/green_check" />
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/dialog_box_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/f6"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="* Please check email box then click verify email"
                android:textColor="@color/input_text_error"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Also check spam email box"
                android:fontFamily="@font/f6"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="80dp"
                android:paddingTop="40dp"
                android:paddingRight="80dp"
                android:paddingBottom="40dp">

                <Button
                    android:id="@+id/dialog_box_verifyBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dialogbox_btn"
                    android:fontFamily="@font/f6"
                    android:padding="15dp"
                    android:text="Verify Email"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/dialog_box_cancelIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_baseline_cancel_24" />

    </LinearLayout>
</RelativeLayout>